{
	"parserOptions": {
		"ecmaVersion": 2019,
    "sourceType": "module"
	},
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"no-use-before-define": [2, "nofunc"],
		"semi": [2, "always"],
		"no-console": ["error", {"allow": ["error", "warn"]}]
	},
	"extends": [
		"eslint:recommended"
	]
}
